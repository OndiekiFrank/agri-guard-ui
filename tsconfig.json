{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "Node16",                     // must match Node16
    "moduleResolution": "Node16",           // Node16 style imports
    "allowJs": false,
    "esModuleInterop": true,                // needed for default imports
    "allowSyntheticDefaultImports": true,   // needed for plugin-react
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
